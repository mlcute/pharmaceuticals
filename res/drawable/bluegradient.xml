

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Bottom and right 2dp Shadow -->
<item>
    <shape >

        <solid android:color="#cccccc" />
        />

    </shape>
</item>

<!-- blue gradient Top color -->
<item 
    
    android:bottom="3px" >

    <shape>

   <gradient 
       android:type="linear" 
       android:angle="-90" 
       android:startColor="#0096dd" 
       android:endColor="#006999" />
    <corners android:topLeftRadius="3dp" android:bottomLeftRadius="3dp" />


    </shape>

</item>


</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <ImageView android:src="@drawable/bluebar"
       		  android:scaleType="fitXY"
        	   android:layout_width="fill_parent"
        	   android:layout_height="wrap_content"
        	   android:adjustViewBounds="true"/>
    <LinearLayout android:orientation="horizontal"
     		   android:gravity="center"
     		   android:background="@drawable/gradient"
     		   android:layout_width="fill_parent"
     		   android:layout_height="wrap_content"
     		   android:paddingTop="15dp"
     		   android:paddingBottom="15dp"
     		   >
    
 <ImageView android:src="@drawable/leads"
      		 android:contentDescription="@drawable/spyfeedback"
              android:layout_width="40dp"
              android:layout_height="40dp"
              
       		   />
  <TextView  android:text="Leads Huminsulin"
      		 android:textSize="20sp"
      		 android:layout_marginLeft="5dp"
      		 android:textColor="#ffffff"
      		 android:layout_width="wrap_content"
      		 android:layout_height="wrap_content"/>
  </LinearLayout>
  
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="fill_parent">

         <TextView
             android:id="@+id/desc1"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:gravity="center_horizontal"
             android:padding="5dp"
             android:text="Date Of Lead"
             android:textSize="14sp" />
         
         <Button
            android:id="@+id/b1r"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/leadsright" />
         
         <TextView
            android:id="@+id/leads1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_toLeftOf="@+id/b1r"
            android:background="@drawable/gradient"
            android:padding="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="Thu, 17-Mar-2013"
            android:textSize="14sp" />
         
          <Button
            android:id="@+id/b1l"
            android:layout_width="30dp"
            android:layout_height="30dp"
              android:layout_toLeftOf="@+id/leads1"
            android:layout_centerVertical="true"
            android:background="@drawable/leadsleft" />
         
    </RelativeLayout>
  
     <TextView  android:text="Refering Doctor's Name"
      		 android:textSize="17sp"
      		 android:paddingLeft="10dp"
      		 android:padding="5dp"
      		 android:textColor="#ffffff"
      		 android:layout_width="match_parent"
      		    android:background="@drawable/gradient"
      		    android:layout_marginTop="5dp"
      		    android:layout_marginBottom="5dp"
      		 android:layout_height="wrap_content"/>

     <EditText
         android:id="@+id/editText1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:inputType="textPersonName" 
         android:lines="1"
         android:padding="10dp"
         android:layout_margin="5dp"
          android:background="@drawable/edittext_modified_states"
         android:gravity="top" />

         
     
   
     <TextView  android:text="SKU Quantity"
      		 android:textSize="17sp"
      		 android:paddingLeft="10dp"
      		 android:padding="5dp"
      		 android:textColor="#ffffff"
      		 android:layout_width="match_parent"
      		    android:background="@drawable/gradient"
      		    android:layout_marginTop="5dp"
      		    android:layout_marginBottom="5dp"
      		 android:layout_height="wrap_content"/>
     
     <ScrollView
     android:id="@+id/listView1"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_marginTop="3dp"
     android:layout_below="@+id/tvAnnounce"
     android:layout_weight="0.5"
          
     android:drawSelectorOnTop="true"
    
     
    >

  <LinearLayout

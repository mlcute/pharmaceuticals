<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:background="@drawable/listgradientnormal">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_height="100dp"
    android:weightSum="1"
    android:orientation="horizontal"
    >
    
    <!--  the vertical date  -->
    
    <LinearLayout
          android:id="@+id/lb" 
        android:layout_height="100dp"
        android:layout_width="0dip"
        android:layout_weight="0.09"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:orientation="horizontal"
        android:background="@drawable/bluegradient">

        <com.sanofi.in.mobcast.VerticalTextView
            android:id="@+id/tvNListDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLength="10"
            android:padding="5dp"
            android:gravity="center|center_horizontal"
            android:text="Date"
            
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="12sp" />
         
         </LinearLayout>
         
    <!-- center text -->

     <LinearLayout
         android:layout_width="0dip"
         android:layout_weight="0.78"
         android:layout_height="match_parent"
         android:layout_marginLeft="5dp"
         android:orientation="vertical" >
         
         <TextView
        android:id="@+id/tvNListTitle"
        
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
         android:layout_width="wrap_content"
        android:text="Title in list"
        android:textSize="20sp"
        android:textStyle="bold" />
                 
         <TextView
        
        android:id="@+id/tvNListSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="This a a a a a a a a a a a a a a a a a a a a a a a a a a a a a a a a  a a a a a a a a a a a a a a a a a a a a a a a a a a a  a a a a a a a a a a a a a a a a a a a a a a a a a a a  a a a a a a a a a a a a a a a a a a a a a a a a a a a "
        android:textSize="16sp"/>
         
        </LinearLayout>
        
     <!-- the image icon of bottom right -->
        
     <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:gravity="bottom"
        android:layout_weight="0.1"
         android:orientation="vertical"
        >
         
        
         
         </LinearLayout>
         </LinearLayout>

         <ImageView
             android:id="@+id/ivNannounce"
             android:layout_alignParentRight="true"
             android:layout_alignParentBottom="true"
             android:layout_width="30dp"
             android:layout_height="40dp"
             
             
             android:layout_marginRight="6dp"
             android:src="@drawable/yes" />

         <ImageView
             android:id="@+id/ivArrow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="12dp"
             android:layout_marginLeft="5dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:src="@drawable/arrow" />

         </RelativeLayout>
         
         
         
        
    
    
        
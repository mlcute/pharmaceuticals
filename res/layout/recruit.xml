<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
 
      
 <ImageView android:src="@drawable/bluebar"
       		  android:scaleType="fitXY"
        	   android:layout_width="fill_parent"
        	   android:layout_height="wrap_content"
        	   android:adjustViewBounds="true"/>
 
 <LinearLayout android:orientation="horizontal"
     		   android:gravity="center"
     		  
     		   android:layout_width="fill_parent"
     		   android:layout_height="wrap_content"
     		   android:background="@drawable/gradient"
     		   android:paddingTop="15dp"
     		   android:paddingBottom="15dp">
     		   
     
  <ImageView android:src="@drawable/icons25"
              android:layout_width="30dp"
              android:layout_height="30dp"
              
       		   />
  <TextView  android:text="Recruitment"
      		 android:textSize="20sp"
      		 android:textColor="#ffffff"
      		 android:layout_width="wrap_content"
      		 android:layout_height="wrap_content"/>
      
     </LinearLayout>
 
 
 
 <ScrollView android:id="@+id/scrollV"
     		 android:layout_width="fill_parent"
     		 android:layout_height="wrap_content"
     		 >
 

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     
     android:orientation="vertical" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="0.5"
         android:orientation="vertical" >

         
     
         <Button
             android:id="@+id/details_bar"
             android:layout_width="fill_parent"
             android:layout_height="35dp"
             android:layout_marginBottom="2dp"
             android:background="@drawable/gradient"
             android:clickable="true"
             android:gravity="center_vertical"
             android:text="Details"
             android:paddingLeft="5dp"
             android:textColor="#ffffff"
             
             android:drawableRight="@drawable/minus_round" 
             
             />

         <LinearLayout
             android:id="@+id/job_details"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical" 
             android:visibility="visible">

         <TextView
             android:id="@+id/Rdesig"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:gravity="center_horizontal"
             android:text="Marketing Manager"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textColor="#13a0e2" />

         <TextView
             android:id="@+id/RTitle"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:gravity="center_horizontal"
             android:singleLine="true"
             android:text="Designation"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:textColor="#13a0e2" />

         <View
             android:layout_width="match_parent"
             android:layout_height="0.2px"
             android:background="#13a0e2" />

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="55dp" >

             <LinearLayout
                 android:id="@+id/Rlinear1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="left"
                 android:orientation="vertical" >

                 <TextView
                     android:id="@+id/RLoc"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Mumbai"
                     android:layout_marginLeft="15dp"
                     android:textAppearance="?android:attr/textAppearanceLarge"
                     android:textColor="#13a0e2" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Location"
                     android:layout_marginLeft="15dp"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:textColor="#13a0e2" />
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/Rlinear2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:orientation="vertical" >

                 <TextView
                     android:id="@+id/RExp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="3.5 "
                     android:layout_marginLeft="15dp"
                     android:textAppearance="?android:attr/textAppearanceLarge"
                     android:textColor="#13a0e2" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Minimum Experience"
                     android:layout_marginRight="15dp"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:textColor="#13a0e2" />
             </LinearLayout>

             <View
                 android:id="@+id/Rview"
                 android:layout_width="0.2px"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:background="#13a0e2" />
         </RelativeLayout>
         </LinearLayout>

         <Button
             android:id="@+id/RSkill"
             android:layout_width="fill_parent"
             android:layout_height="35dp"
             android:layout_marginBottom="2dp"
             android:background="@drawable/gradient"
             android:clickable="true"
             android:gravity="center_vertical"
             android:text="Skills"
             android:paddingLeft="5dp"
             android:textColor="#ffffff"
             
             android:drawableRight="@drawable/plus_round" 
             
             />

         <TextView
             android:id="@+id/RSkillText"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="5dp"
             android:textColor="#13a0e2"
             android:visibility="invisible" />

         <Button
             android:id="@+id/RJd"
             android:layout_width="fill_parent"
             android:layout_height="35dp"
             android:layout_marginBottom="2dp"
             android:background="@drawable/gradient"
             android:clickable="true"
             android:paddingLeft="5dp"
             android:gravity="center_vertical"
             android:text="Job Description"
             android:drawableRight="@drawable/plus_round"
             android:textColor="#ffffff" />

         <TextView
             android:id="@+id/RJDText"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="5dp"
             android:textColor="#13a0e2"
             android:visibility="invisible" />

         <Button
             android:id="@+id/Rqf"
             android:layout_width="fill_parent"
             android:layout_height="35dp"
             android:layout_marginBottom="2dp"
             android:background="@drawable/gradient"
             android:clickable="true"
             android:gravity="center_vertical"
             android:text="Qualification"
             android:paddingLeft="5dp"
             android:drawableRight="@drawable/plus_round"
             android:textColor="#ffffff" />

         <TextView
             android:id="@+id/RqfText"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="5dp"
             android:textColor="#13a0e2"
             android:visibility="invisible" />

         <Button
             android:id="@+id/Rct"
             android:layout_width="fill_parent"
             android:layout_height="35dp"
             android:layout_marginBottom="2dp"
             android:background="@drawable/gradient"
             android:clickable="true"
             android:gravity="center_vertical"
             android:text="CTC"
             android:paddingLeft="5dp"
             android:drawableRight="@drawable/plus_round"
             android:textColor="#ffffff" />

         <TextView
             android:id="@+id/RctText"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:textColor="#13a0e2"
             android:paddingLeft="5dp"
             android:visibility="invisible" />

         <Button
             android:id="@+id/contact_bar"
             android:layout_width="fill_parent"
             android:layout_height="35dp"
              android:drawableRight="@drawable/minus_round"
             android:layout_marginBottom="2dp"
             android:background="@drawable/gradient"
             android:gravity="center_vertical"
             android:paddingLeft="5dp"
             android:text="Contact:"
             android:textColor="#ffffff" />

         <TextView
             android:id="@+id/Rcontact"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="5dp"
             android:singleLine="false"
             android:text="@string/contact"
             android:textColor="#000000" />
         <TextView
             android:id="@+id/Rcontact2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="2dp"
             android:paddingLeft="5dp"
             android:singleLine="false"
             android:text="@string/contact"
             android:textColor="#000000" />
         
         
<LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_margin="1dp"
             android:layout_gravity="center_horizontal"
    >
         <Button
             android:id="@+id/RbtnShare"
             android:layout_width="0dip"
             android:layout_height="42dp"
             android:layout_weight="0.8"
             android:layout_gravity="center_horizontal"
             android:text="Share candidate from Phonebook"
             android:padding="7dp"
             
             android:textColor="#ffffff"
             android:background="@drawable/button_gradient"
             />
         
         <ImageButton
             android:id="@+id/RbtnSharefb"
             android:layout_width="0dip"
             android:layout_height="42dp"
             android:layout_weight="0.2"
             android:layout_gravity="center_horizontal"
             android:background="@drawable/button_gradient"
             android:layout_marginLeft="15dp"
             android:layout_marginBottom="15dp"
             android:padding="7dp"
             android:src="@drawable/ic_share"  />
         </LinearLayout>
         
     </LinearLayout>

     
 </LinearLayout>
</ScrollView>
</LinearLayout>
<ImageView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
         	  android:src="@drawable/bluebar"
         	  android:layout_alignParentBottom="true"
         	   android:scaleType="fitXY"
              android:adjustViewBounds="true" />
</RelativeLayout>
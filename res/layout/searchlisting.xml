<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:weightSum="1"
    android:background="@drawable/listgradientnormal">

<LinearLayout 
     android:layout_width="0dip"
         android:layout_weight="0.95"
    android:layout_alignParentLeft="true"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    
            
    <!-- center text -->

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginLeft="5dp"
         android:orientation="vertical" >
         
         <TextView
        android:id="@+id/tvAListTitle"
        android:maxLines="1"
        android:layout_height="wrap_content"
       
         android:ellipsize="end"
        android:singleLine="true"
         android:layout_width="wrap_content"
        android:text="ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
        android:textSize="20sp"
        android:textStyle="bold" />
                 
         <TextView
        
        android:id="@+id/tvAListSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:text="sssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
        android:textSize="16sp"/>
         
        </LinearLayout>
        
     <!-- the image icon of bottom right -->
        
     
         </LinearLayout>

         <ImageView
             android:id="@+id/ivArrow"
             
              android:layout_width="wrap_content"
         android:layout_weight="0.05"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginRight="12dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:src="@drawable/arrow" />

         </LinearLayout>
         
         
         
        
    
    
        
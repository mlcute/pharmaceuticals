<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_menu_home" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_action_search" />
    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="#ff0000" />

    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Notification Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="#ff0000" />

    <CheckBox
        android:id="@+id/cbSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="via Sms" />

    <CheckBox
        android:id="@+id/cbEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="via Email" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Schedule Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000" />

    <CheckBox
        android:id="@+id/cbAlerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Alerts to be disabled between 10pm to 6am" />

    <CheckBox
        android:id="@+id/cbLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show my leave calendar to the management to be able to send project accordingly" />

    <CheckBox
        android:id="@+id/cbCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow events to be added to the calendar" />

    <CheckBox
        android:id="@+id/cbStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow my usages reports to be sync with the server" />

    <CheckBox
        android:id="@+id/cbVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync all video automatically on wi-fi" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync all video on mobile network" />

</LinearLayout>
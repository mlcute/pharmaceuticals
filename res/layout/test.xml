<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/listgradientnormal">
    

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    >
     <!--  the vertical date  -->
    
    <LinearLayout
          android:id="@+id/lb" 
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:orientation="horizontal"
        android:background="@drawable/bluegradient">

        <com.sanofi.in.mobcast.VerticalTextView
            android:id="@+id/tvTListDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLength="10"
            android:padding="5dp"
            android:gravity="center|center_horizontal"
            android:text="Date"
            
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="12sp" />
         
         </LinearLayout>
         
    <!-- center text -->
     <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        
         android:orientation="vertical"
         android:layout_marginLeft="5dp"
        >
        
         <TextView
        android:id="@+id/tvTListTitle"
        
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
         android:layout_width="250dp"
        android:text="Title in list"
        android:textSize="20sp"
        android:textStyle="bold" />
         
         <TextView
        
        android:id="@+id/tvListSummary"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="This is gonna contain brief summary about the event "
        android:textSize="16sp"/>
         
          </LinearLayout>
          
      <!-- the image icon of bottom right -->
        
     <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:gravity="bottom"
         android:orientation="vertical"
        >
         
         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">         

         <ImageView
             android:id="@+id/ivTannounce"
             android:layout_alignParentRight="true"
             android:layout_alignParentBottom="true"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginRight="5dp"
             android:layout_marginBottom="5dp"
             android:src="@drawable/trainings"  />
        
         </RelativeLayout>
         
         </LinearLayout>
         </LinearLayout>
          <ImageView
             android:id="@+id/ivArrow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="12dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:src="@drawable/arrow" />
         </RelativeLayout>
          
     